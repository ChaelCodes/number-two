- content_for :title do
  Dashboard
%nav
  %section.right
    %ul
      %li
        %a{href: destroy_user_session_path} ‍Sign Out 👩‍💻
      %li
        %a{href: overlay_index_url(channel: current_user&.username), target: :_blank} Overlay 🔗
.container
  = render 'twitch_auth'
.container
  %h2 !ask
  %ul#ask_list{data: {controller: :ask, target: 'ask.questions', 'ask-channel': current_user&.username}}
.container
  %h2 !todo
  %ul#todo_list{data: {controller: :todo, target: 'todo.container'}}
    = render @todos
