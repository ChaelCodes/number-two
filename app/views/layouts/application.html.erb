<!DOCTYPE html>
<html>
  <head>
    <title>NumberTwo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <nav>
      <section class='right'>
        <ul>
          <% if current_user.present? %>
            <li>
              <a class='nes-btn is-success' href='<%= overlay_url(channel: current_user.username.downcase) %>' id='overlays' target="_blank">
                <i class='nes-icon star'></i>
                <span>Open Overlays</span>
              </a>
            </li>
          <% end %>
          <li>
            <% unless current_user.present? %>
              <a class='nes-btn is-primary' href='/sign_in' id='signin'>
                <i class='nes-icon twitch'></i>
                <span>Sign In</span>
              </a>
            <% else %>
              <a class="nes-btn is-warning" href='/sign_out' id='signout'>
                <i class='nes-icon twitch'></i>
                <span>Sign Out</span>
              </a>
            <% end %>
          </li>
        </ul>
      </section>
    </nav>
    <% if notice.present? or alert.present? %>
      <section class="alerts nes-container is-rounded is-centered">
        <% if notice.present? %>
          <p class="notice nes-text is-success">
            <%= notice %>
          </p>
        <% end %>
        <% if alert.present? %>
          <p class="alert nes-text is-error">
            <%= alert %>
          </p>
        <% end %>
      </section>
    <% end %>
    <%= yield %>
  </body>
</html>
