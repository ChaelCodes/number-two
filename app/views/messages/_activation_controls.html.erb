<%= form_with model: message, remote: true do |f| %>
  <% if message.inactive? %>
    <%= f.hidden_field :status, value: :active %>
    <input type="submit" class="nes-btn is-primary" value="Promote">
  <% else %>
    <%= f.hidden_field :status, value: :inactive %>
    <input type="submit" class="nes-btn is-warning" value="Demote">
  <% end %>
<% end %>
<%= link_to "Delete", message, method: :delete, remote: true, class: "nes-btn is-error" %>
