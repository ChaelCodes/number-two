%li.nes-container.is-rounded{class: "#{active? ? 'current' : ''}", data: {id: todo.id, target: 'todo.todos'}}
  = render TodoMessageComponent.new(todo: todo)
  %div
    = form_for todo, url: todo_promote_path(todo), remote: true do |f|
      %input.nes-btn.is-primary{type: :submit, value: active? ? 'Recall' : 'Promote'}
    = form_for todo, url: todo_complete_path(todo), remote: true do |f|
      %input.nes-btn.is-success{type: :submit, value: 'Complete'}
    - unless active?
      = form_for todo, url: todo_delete_path(todo), remote: true do |f|
        %input.nes-btn.is-warning{type: :submit, value: 'Delete'}
